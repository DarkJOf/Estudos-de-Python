#:kivy 2.0.0

Widget:
<MyLayout>:
    id: calculadora
    label: label
    BoxLayout:
        width: 500
        height: 500
        orientation: 'vertical'

        Label:
            id: label
            background_color: 'white'

        BoxLayout:
            orientation: 'horizontal'

            Button:
                text: '7'
                on_press: label.text += self.text
            Button:
                text: '8'
                on_press: label.text += self.text
            Button:
                text: '9'
                on_press: label.text += self.text
            Button:
                text: '/'
                on_press: label.text += self.text

        BoxLayout:
            orientation: 'horizontal'
            
            Button:
                text: '4'
                on_press: label.text += self.text
            Button:
                text: '5'
                on_press: label.text += self.text
            Button:
                text: '6'
                on_press: label.text += self.text
            Button:
                text: '*'
                on_press: label.text += self.text

        BoxLayout:
            orientation: 'horizontal'
            
            Button:
                text: '1'
                on_press: label.text += self.text
            Button:
                text: '2'
                on_press: label.text += self.text
            Button:
                text: '3'
                on_press: label.text += self.text
            Button:
                text: '-'
                on_press: label.text += self.text

        BoxLayout:
            orientation: 'horizontal'
            
            Button:
                text: 'AC'
                on_press: label.text = ''
            Button:
                text: '0'
                on_press: label.text += self.text
            Button:
                text: '='
                on_press: calculadora.calculate(label.text)
            Button:
                text: '+'
                on_press: label.text += self.text